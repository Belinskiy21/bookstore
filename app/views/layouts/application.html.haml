!!!
%html
  %head
    %meta{charset: "UTF-8"}
    %meta{name: "viewport", content: "width=device-width"}
    %link{href: "https://fonts.googleapis.com/css?family=Open+Sans", rel: "stylesheet"}
    %link{href: "../css/style.css", rel: "stylesheet"}
    %title Bookstore
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    - if flash[:notice]
      .alert.alert-success= flash[:notice]
    - if flash[:alert]
      .alert.alert-danger= flash[:alert]
    - if user_signed_in?
      = render partial: 'shared/header'
    - else
      = render partial: 'shared/header_for_guest'

    = yield
    - if user_signed_in?
      = render partial: 'shared/footer'
    - else
      = render partial: 'shared/footer_for_guest'
    %script{src: "https://use.fontawesome.com/67602d7308.js"}
    %script{src: "../../assets/javascripts/jquery.js"}
    %script{src: "../../assets/javascripts/bootstrap.js"}
