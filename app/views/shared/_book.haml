- @books.each_slice(4) do |book|
  .row
    - book.each do |book|
      .col-xs-6.col-sm-3
        .general-thumb-wrap
          .thumbnail.general-thumbnail
            = image_tag img_of(book) , alt: 'design-book', class: 'img-shadow general-thumbnail-img'
            .thumb-hover
              .general-thumb-link-wrap
                = form_for @order_item, remote: true do |form|
                  = link_to book, class: 'thumb-hover-link' do
                    %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                  = form.hidden_field :quantity, value: 1
                  = form.hidden_field :book_id, value: book.id
                  = form.button class: 'thumb-hover-link' do
                    %i.fa.fa-shopping-cart.thumb-icon
        .general-thumb-info
          %p.title=book.title
          %p.font-16.in-gold-500=book.price
          %span.divider-sm
          %p.lead.small=authors_name_select(book)
