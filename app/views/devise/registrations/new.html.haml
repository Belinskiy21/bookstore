%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "general-form" }) do |f|
    = devise_error_messages!
    .form-group.mb-30
      = f.label :email, class: "control-label input-label"
      = f.email_field :email, id: "email", class: "form-control", autofocus: true, placeholder: "Enter Email"
    .form-group.mb-30
      = f.label :password, class: "control-label input-label"
      = f.password_field :password, autocomplete: "off", id: "password", class: "form-control", placeholder: "Password"
    .form-group.mb-30
      = f.label :password, class: "control-label input-label"
      = f.password_field :password_confirmation, autocomplete: "off", id: "password confirm", class: "form-control", placeholder: "Confirm Password"
    .form-group.checkbox.text-center.mb-30
      %label.checkbox-label
        = f.check_box :remember_me, hidden: "true", class: "checkbox-input"
    .text-center
      = f.submit 'Sign up', class: "btn btn-default mb-20"
