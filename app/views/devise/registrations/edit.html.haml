%main.container
  %h1.general-title-margin= t('settings')
  %ul.nav.clearfix.mb-20
    %li.tab-item.active
      = link_to t('address'), edit_address_path(current_user.id),  class: 'tab-link'
    %li.tab-item
      = link_to t('privacy'), edit_user_registration_path, class: 'tab-link'
      .row.mb-60
        .col-sm-5
          %p.in-gold-500.font-18.mb-25= t('email')
          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'general-form-md', id: 'edit_user_email' }, wrapper: :custom) do |f|
            = f.input :email, placeholder: t('enter_email'), class: 'form-control', label: t('enter_email'), wrapper_html: { class: 'form-group mb-35' }
            .general-text-align
              = f.button :submit, t('save'), class: 'btn btn-default mb-35'
        .col-sm-5.col-sm-offset-1
          %p.in-gold-500.font-18.mb-25= t('password')
          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'general-form-md divider-lg-bottom pb-25', id: 'edit_user_password' }, wrapper: :custom) do |f|
            = f.input :current_password, placeholder: t('old_password'), class: 'form-control', label: t('old_password'), wrapper_html: { class: 'form-group mb-30' }
            = f.input :password, placeholder: t('new_password'), class: 'form-control', label: t('new_password'), wrapper_html: { class: 'form-group mb-30' }
            = f.input :password_confirmation, placeholder: t('confirm_password'), class: 'form-control', label: t('confirm_password'), wrapper_html: { class: 'form-group mb-40' }
            .general-text-align
              = f.button :submit, t('save'), class: 'btn btn-default mb-10'
        .col-sm-12
          %p.in-gold-500.font-18.mb-25= t('remove_account')
          %form
            .general-settings-btn
              =link_to t('please_rem_account'), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-default'
            .form-group.checkbox.general-settings-checkbox
              %label.checkbox-label
                %input.checkbox-input{:hidden => "true", :type => "checkbox"}/
                %span.checkbox-icon
                  %i.fa.fa-check
                %span.checkbox-text= t('i_understand')



