.general-message-wrap.divider.form
  %h3.in-gold-500.mb-25= t('write')
  = form_for Review.new, html: { id: 'post_review'} do |f|
    = f.hidden_field :book_id, value: @book.id
    = f.hidden_field :user_id, value: current_user.id
    = f.label :rate, t('rate'), class: 'control-label in-gold-500 mb-25'
    = f.select :rate, (1..5), class: 'rating-loading', id: :review_rate
    .review_score
    %br
    = f.label :Review, class: 'in-gold-500 mb-25'
    %br
    = f.text_area :content, class: 'form-control'
    %br
    = f.submit t('button.post'), class: 'btn btn-default pull-right'
